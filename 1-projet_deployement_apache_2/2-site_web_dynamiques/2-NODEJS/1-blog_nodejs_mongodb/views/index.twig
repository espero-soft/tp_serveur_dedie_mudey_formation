{% include "partials/header.twig" %}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="display-4 text-center">Mudey Blog App</h1>
    </div>
  </div>

  <div class="row">
    {% if blogs.length > 0 %}
      {% for blog in blogs %}
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="{{ blog.image }}" height="250px" class="card-img-top" alt="Image failed to load :/">
            <div class="card-body">
              <h5 class="card-title">{{ blog.title }}</h5>
              <p class="card-text">
                {{ blog.body }}  
              </p>
              <a href="/blogs/{{ blog._id }}" class="btn btn-primary">Read More</a>
              {# <button type="button" class="btn btn-secondary">Author Details</button> #}
            </div>
            <div class="card-footer">
              <small class="text-muted">{{ blog.created.toDateString() }}</small>
            </div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p class="text-center">No blogs available</p>
    {% endif %}
  </div>
</div>

{% include "partials/footer.twig" %}
